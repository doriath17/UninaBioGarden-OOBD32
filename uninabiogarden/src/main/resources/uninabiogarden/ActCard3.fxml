<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<fx:root styleClass="activity-card" stylesheets="@actCardStyle.css" type="javafx.scene.layout.StackPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    
    <VBox>
        
        <HBox styleClass="card-header">
            <Label styleClass="activity-name" text="Semina Pomodori Lotti A &amp; B" />
            
            <Region HBox.hgrow="always" />
            
            <Pane styleClass="status-indicator-container status-indicator-container-pianificata">
                <Label styleClass="status-label" text="Pianificata" />
            </Pane>
        </HBox>
        
        <HBox styleClass="card-dates">
            <Label styleClass="date-label" text="Inizio: 01/10/2025" />
            <Label styleClass="date-separator" text=" | " />
            <Label styleClass="date-label" text="Scadenza: 15/10/2025" />
        </HBox>
        
        <VBox fx:id="expandableDetailsContainer" managed="false" spacing="10" styleClass="expandable-details" visible="false" VBox.vgrow="ALWAYS">
            
            <Separator styleClass="details-separator" />
            
            <Label styleClass="details-label" text="Coltivatori: Mario Rossi, Sara Bianchi, Luca Verdi" />
            
            <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="card-actions">
                <Button styleClass="icon-button" text="Modifica" />
                <Button styleClass="icon-button delete-button" text="Elimina" />
            </HBox>
        </VBox>
        
    </VBox>
</fx:root>

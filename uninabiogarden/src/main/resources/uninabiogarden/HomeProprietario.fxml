<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720" prefWidth="1280" styleClass="root" stylesheets="@homeProprietarioStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    
    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="top-bar">
            <padding>
                <Insets bottom="20" left="30" right="30" top="20" />
            </padding>
            <Label styleClass="app-title" text="UninaBioGarden" />
            
            <!-- Window Controls Placeholder (right side) -->
            <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
                <Button prefHeight="30" prefWidth="40" styleClass="window-button" text="—" />
                <Button prefHeight="30" prefWidth="40" styleClass="window-button" text="□" />
                <Button prefHeight="30" prefWidth="40" styleClass="window-button, close-button" text="✕" />
            </HBox>
        </HBox>
    </top>
    
    <!-- Left Sidebar -->
    <left>
        <VBox alignment="CENTER" prefWidth="200" spacing="0" styleClass="sidebar">
            <padding>
                <Insets bottom="20" left="10" right="10" top="20" />
            </padding>
         <ImageView fitHeight="150.0" fitWidth="159.0" pickOnBounds="true" preserveRatio="true">
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
            <image>
               <Image url="@images/logo.png" />
            </image>
         </ImageView>
            
            <Button prefHeight="50" prefWidth="180" styleClass="menu-button" text="Profilo">
                <VBox.margin>
                    <Insets bottom="5.0" />
                </VBox.margin>
            </Button>
            
            <Button prefHeight="50" prefWidth="180" styleClass="menu-button" text="Lotti">
                <VBox.margin>
                    <Insets bottom="5" />
                </VBox.margin>
            </Button>
            
            <Button prefHeight="50" prefWidth="180" styleClass="menu-button" text="Progetti">
                <VBox.margin>
                    <Insets bottom="5" />
                </VBox.margin>
            </Button>
            
            <Button prefHeight="50" prefWidth="180" styleClass="menu-button" text="Attivita'">
                <VBox.margin>
                    <Insets bottom="5" />
                </VBox.margin>
            </Button>
            
            <Button prefHeight="50" prefWidth="180" styleClass="menu-button" text="Notifiche">
                <VBox.margin>
                    <Insets bottom="5" />
                </VBox.margin>
            </Button>
            
            <Button prefHeight="50" prefWidth="180" styleClass="menu-button" text="Report">
                <VBox.margin>
                    <Insets bottom="5" />
                </VBox.margin>
            </Button>
        </VBox>
    </left>
    
    <!-- Center Content Area -->
    <center>
        <VBox styleClass="content-area">
            <!-- Content Title -->
            <HBox alignment="CENTER_LEFT" styleClass="content-header">
                <padding>
                    <Insets bottom="20" left="30" right="30" top="20" />
                </padding>
                <Label styleClass="content-title" text="Titolo Contenuto" />
            </HBox>
            
            <!-- Main Content Pane -->
            <StackPane styleClass="main-content" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="30" left="30" right="30" top="20" />
                </padding>
                
                <!-- Placeholder content -->
                <Label styleClass="placeholder-text" text="Main Content" />
            </StackPane>
        </VBox>
    </center>
    
    <!-- Bottom Navigation Bar -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15" styleClass="bottom-nav">
            <padding>
                <Insets bottom="15" left="30" right="30" top="15" />
            </padding>
            <Button prefHeight="35" prefWidth="100" styleClass="nav-button" text="Back" />
            <Button prefHeight="35" prefWidth="100" styleClass="nav-button" text="Next" />
        </HBox>
    </bottom>
    
</BorderPane>
